<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_court_bg" />

    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/game_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgHoop"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/game_hoop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgBall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/game_ball"
        app:layout_constraintBottom_toTopOf="@+id/imgPlayer"
        app:layout_constraintStart_toStartOf="@+id/imgPlayer"
        app:layout_constraintEnd_toEndOf="@+id/imgPlayer"
        android:layout_marginBottom="-60dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99000000"
        android:padding="8dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/imgPlayer"
        app:layout_constraintEnd_toStartOf="@+id/imgHoop"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUNTOS: 0"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca para empezar"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãngulo"
            android:textColor="#FFFFFF"
            android:textSize="10sp"/>

        <ProgressBar
            android:id="@+id/progressAngle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#03A9F4"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potencia"
            android:textColor="#FFFFFF"
            android:textSize="10sp"/>

        <ProgressBar
            android:id="@+id/progressPower"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#FF5722"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIAR"
        android:backgroundTint="#FF6F00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:backgroundTint="#D32F2F"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>