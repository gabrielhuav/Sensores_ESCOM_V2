<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".presentation.components.BuildingNumber2">

    <!-- Título de Biblioteca ESIA -->
    <TextView
        android:id="@+id/title_biblioteca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biblioteca ESIA"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#2d2d2d"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@android:color/white"
        android:contentDescription="Back to Home"
        app:layout_constraintTop_toBottomOf="@id/title_biblioteca"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estado: Biblioteca ESIA"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_biblioteca"
        app:layout_constraintStart_toEndOf="@id/button_back_to_home"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvBluetoothStatus"
        app:layout_constraintBottom_toTopOf="@id/inner_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2d2d2d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/movement_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            app:layout_constraintBottom_toTopOf="@id/center_buttons"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center">

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="0"/>

            <Button
                android:id="@+id/button_north"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="↑"
                android:textColor="@android:color/white"
                android:background="#666666"
                android:contentDescription="Move North"
                android:layout_row="0"
                android:layout_column="1"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="2"/>

            <Button
                android:id="@+id/button_west"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="←"
                android:textColor="@android:color/white"
                android:background="#666666"
                android:contentDescription="Move West"
                android:layout_row="1"
                android:layout_column="0"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:id="@+id/button_east"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="→"
                android:textColor="@android:color/white"
                android:background="#666666"
                android:contentDescription="Move East"
                android:layout_row="1"
                android:layout_column="2"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="2"
                android:layout_column="0"/>

            <Button
                android:id="@+id/button_south"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="↓"
                android:textColor="@android:color/white"
                android:background="#666666"
                android:contentDescription="Move South"
                android:layout_row="2"
                android:layout_column="1"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="2"
                android:layout_column="2"/>
        </GridLayout>

        <Button
            android:id="@+id/button_a"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="A"
            android:textColor="@android:color/black"
            android:background="#FFC107"
            android:contentDescription="Button A - Interact"
            app:layout_constraintBottom_toTopOf="@id/center_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:id="@+id/center_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_small_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="SRV"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:textSize="10sp"
                android:contentDescription="Servidor"/>

            <Button
                android:id="@+id/button_small_2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:text="BACK"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:textSize="10sp"
                android:contentDescription="Regresar a ESIA"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/button_serverOnline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ON"
                android:textColor="@android:color/white"
                android:background="#607D8B"
                android:textSize="10sp"
                android:contentDescription="Server Online"
                android:layout_marginStart="8dp"/>

            <!-- Botones adicionales específicos de biblioteca -->
            <Button
                android:id="@+id/button_north_east"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="CAT"
                android:textColor="@android:color/white"
                android:background="#2196F3"
                android:textSize="10sp"
                android:contentDescription="Catálogo"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/button_south_east"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="RES"
                android:textColor="@android:color/white"
                android:background="#9C27B0"
                android:textSize="10sp"
                android:contentDescription="Reservar"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>