<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.locations.outdoor.GlobalMapActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <GridLayout
        android:id="@+id/movement_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:columnCount="3"
        android:rowCount="3">

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_north"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="Move North"
            android:text="N"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/button_west"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="Move West"
            android:text="W"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/button_east"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="Move East"
            android:text="E"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_south"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="1"
            android:contentDescription="Move South"
            android:text="S"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

</RelativeLayout>