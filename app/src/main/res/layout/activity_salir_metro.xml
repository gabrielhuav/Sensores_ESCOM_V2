<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Mensaje de transiciÃ³n -->
    <TextView
        android:id="@+id/tvTransitionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Viajando..."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Tren del metro -->
    <ImageView
        android:id="@+id/metroTrain"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/metro_train"
        android:contentDescription="Tren del metro"
        android:visibility="visible" />

    <!-- Puntito/pasajero -->
    <ImageView
        android:id="@+id/pasajero"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pasajero"
        android:contentDescription="Pasajero"
        android:visibility="visible" />

</RelativeLayout>