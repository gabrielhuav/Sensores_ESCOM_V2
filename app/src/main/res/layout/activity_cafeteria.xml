<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_container_cafeteria"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_back_to_gameplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/movement_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/button_move_north"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="N"
            android:layout_row="0"
            android:layout_column="1"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/button_move_west"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="W"
            android:layout_row="1"
            android:layout_column="0"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/button_move_east"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="E"
            android:layout_row="1"
            android:layout_column="2"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:id="@+id/button_move_south"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="S"
            android:layout_row="2"
            android:layout_column="1"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="2"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>