<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_map_cinepolis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/plaza_torres_n1"
            android:contentDescription="Mapa del Nivel 1 de Plaza Torres - CinÃ©polis" />

    </FrameLayout>


    <Button
        android:id="@+id/button_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Desconectado"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/movement_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/button_north"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="N"
            android:textColor="@android:color/white"
            android:contentDescription="Move North"
            android:layout_row="0"
            android:layout_column="1"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/button_west"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="W"
            android:textColor="@android:color/white"
            android:contentDescription="Move West"
            android:layout_row="1"
            android:layout_column="0"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/button_east"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="E"
            android:textColor="@android:color/white"
            android:contentDescription="Move East"
            android:layout_row="1"
            android:layout_column="2"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:id="@+id/button_south"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="S"
            android:textColor="@android:color/white"
            android:contentDescription="Move South"
            android:layout_row="2"
            android:layout_column="1"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="2"/>
    </GridLayout>

    <Button
        android:id="@+id/button_a"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="A"
        android:textColor="@android:color/white"
        android:contentDescription="Button A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_small_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="B1"
            android:textColor="@android:color/white"
            android:contentDescription="Button B1"/>

        <Button
            android:id="@+id/button_small_2"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="BCK"
            android:textColor="@android:color/white"
            android:contentDescription="Button B2"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/button_serverOnline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Server"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_green_light"
            android:contentDescription="Button Server"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
