<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para regresar al menú principal -->
        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar al Menú"
            android:layout_gravity="start"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Estado del servidor -->
        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estado: Desconectado"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor del mapa -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#f9ebea" />

        <!-- Mostrar posición del jugador -->
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posición: (0, 0)"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Controles de movimiento -->

        <!-- Controles de zoom -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Botón Norte -->
            <Button
                android:id="@+id/btnNorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#cd6155"

                android:text="Norte" />

            <!-- Botones Oeste, Interacción y Este -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnWest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#f1948a"
                    android:text="Oeste" />

                <Button
                    android:id="@+id/btnInteract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#f2d7d5"
                    android:text="A"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnEast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#f1948a"
                    android:text="Este"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Botón Sur -->
            <Button
                android:id="@+id/btnSouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#cd6155"
                android:text="Sur"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnZoomIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="#d7bde2"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnZoomOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:backgroundTint="#bb8fce"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnStartServer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar Servidor"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConnectToDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conectar a Dispositivo"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
